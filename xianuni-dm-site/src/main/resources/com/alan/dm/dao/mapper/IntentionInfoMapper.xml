<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alan.dm.dao.mapper.IntentionInfoMapper">

    <sql id="A_TABLE">tb_party_intention</sql>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="intentionInfo.id">
        INSERT INTO
        <include refid="A_TABLE"/>
        (trainHour,publiced,meetTime,meetContent,introducer,politicalChcekContent,recorded,schoolApproval,createTime)
        VALUES(#{intentionInfo.trainHour},#{intentionInfo.publiced},#{intentionInfo.meetTime},#{intentionInfo.meetContent},#{intentionInfo.introducer},#{intentionInfo.politicalChcekContent},#{intentionInfo.recorded},#{intentionInfo.schoolApproval},#{intentionInfo.createTime})
    </insert>

    <select id="getById" resultType="com.alan.dm.entity.IntentionInfo">
        select *
        FROM <include refid="A_TABLE" />
        WHERE id=#{intentionId}
    </select>

    <delete id="delete">
        DELETE
        FROM  <include refid="A_TABLE" />
        WHERE id=#{intentionInfo.id}
    </delete>

</mapper>